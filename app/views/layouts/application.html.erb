      <input id="searchbar" onekeyup="search_shelters()" type="text" name="search" placeholder="Enter Your Zipcode" href=/search required >
    </div>
  </div>
</div> -->

      </nav>
    <main>
        <%= yield %>
      <div class="spacer">

      </div>
    </main>
      <footer class="footer text-faded text-center py-5">
      <div class="container">
        <p class="m-0 small"> Turing Backend 1904 Presents to You... Sleep Safe 2019</p>
      </div>
  </footer>

  <script src="https://blackrockdigital.github.io/startbootstrap-business-casual/vendor/jquery/jquery.min.js"></script>
  <script src="https://blackrockdigital.github.io/startbootstrap-business-casual/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<script>
  <% def search_for_shelters %>
    <% input = :q %>
      <% end %>

  </script>
  </body>
</html>
