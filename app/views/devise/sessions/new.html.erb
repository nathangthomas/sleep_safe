
<div class="container">
  <section style="text-align:center;">
    <h1 style="color:sandybrown;"><strong>Log In</strong></h1>
    <br>
    <%= form_tag new_user_session_path do %>
      <font color="sandybrown"><%= label_tag :email %></font>
      </br>
      <%= text_field_tag :email, params[:email] %>
      </br>
      <font color="sandybrown"><%= label_tag :password %></font>
      </br>
      <%= password_field_tag :password %>
    </section>
      </br>
      <%= submit_tag 'Login' %>
    <% end %>
</div>
