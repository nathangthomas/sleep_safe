<!DOCTYPE html>
<html>
<head>
  <style>
    #map {
      height: 300px;
      width: 75%;
     margin:0 auto 0 auto;
     bottom:-10;
     position:centered;
    }
  </style>
</head>
<body>

  <section class='shelter_show'>
  <h1><%= @shelter.name %></h1>
  <h3>Info</h3>
      <h3 class='name'> <%= @shelter[:name]  %></h3>
      <p class='phone_number'> Phone: <%= @shelter[:phone_number] %></p>
      <p class='address'> <%= @shelter[:address] %></p>
      <h3>Special Services</h3>
  </section>
  <!--The div element for the map -->
  <div id="map"></div>
  <script>
  // Initialize and add the map
  function initMap() {
  // The location of coordinates
  var shelter_location = {lat: <%= @shelter[:latitude] %>, lng: <%= @shelter[:longitude] %>};
  // The map, centered at coordinates
  var map = new google.maps.Map(
      document.getElementById('map'), {zoom: 15, center: shelter_location});
  // The marker, positioned at coordinates
  var marker = new google.maps.Marker({position: shelter_location, map: map});
}
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=<%=ENV["GOOGLE_PLACES_API_KEY"]%>&callback=initMap">
    </script>
  </body>
</html>
